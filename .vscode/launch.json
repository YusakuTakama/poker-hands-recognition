            "cwd": "${workspaceFolder}",
            "justMyCode": false,
        },
        {
            "name": "model/main.py 1GPU(3)",
            "type": "debugpy",
            "request": "launch",
            "module": "model.main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "CUDA_VISIBLE_DEVICES": "3",
                // "CUDA_LAUNCH_BLOCKING": "1",
            },
            "justMyCode": false,
            "args": [
                "--batch_size",
                "64",
                "--epochs",
                "100",
                "--data_path",
                "model/data/annotations",
                "--model",
                "yolov11",
                "--eval",
            ]
        },
    ]
}
